
<%- include("header") -%>

<body>
    <div>
        <button class="navbtn" onclick="location.href='/'">home</button>
        <button class="navbtn" onclick="location.href='/work'">worklist</button>
        <button class="navbtn" onclick="location.href='/about'">about</button>
    </div>
    <div class="box" id="heading">
        <h1><%= header %></h1>
    </div>
    
    <div class="box">
        

            <% newList.forEach(function(element){ %>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkBox" value="<%= element._id %>" onchange="this.form.submit()">
                    <p> <%= element.name %> </p>
                    </div>
                    <input type="hidden" name="listName" value="<%= header %>">
                </form>
                    <% }) %>

            

            <form action="/" method="post" class="item">
                <input type="text" name="userlist" placeholder="New Item" autocomplete="off">
                <button class="subbtn" type="submit" name="randomList" value="<%= header %>">+</button>
            </form>
        
    </div>
    

